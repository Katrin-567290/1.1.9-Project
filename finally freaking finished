#Fish 1
def fish_one(x):
  t.penup()
  t.setheading(0)
  #f1pos+390
  t.goto(x,60)
  t.pendown()
  t.fillcolor('salmon')
  t.pencolor('salmon')
  t.begin_fill()
  t.goto(x+80,110)
  t.left(180)
  t.circle(10,180)
  t.left(180)
  t.circle(10,180)
  t.left(180)
  t.circle(10,180)
  t.left(180)
  t.circle(10,180)
  t.goto(x,60)
  t.end_fill()
  
  t.right(90)
  t.penup()
  t.goto(x,110)
  t.pendown()
  t.fillcolor('salmon')
  t.pencolor('salmon')
  t.begin_fill()
  t.goto(x+20,80)
  t.goto(x+30,120)
  t.goto(x,90)
  t.end_fill()
  
  t.penup()
  t.goto(x-40,70)
  t.pendown()
  t.fillcolor('seagreen')
  t.pencolor('seagreen')
  t.begin_fill()
  t.circle(40)
  t.end_fill()
  
  t.penup()
  t.goto(x-20,80)
  t.pendown()
  t.fillcolor('black')
  t.pencolor('black')
  t.begin_fill()
  t.circle(4,270)
  t.end_fill()
  
  t.penup()
  t.goto(x+10,40)
  t.pendown()
  t.fillcolor('salmon')
  t.pencolor('salmon')
  t.begin_fill()
  t.circle(10,270)
  t.end_fill()
  
  t.penup()
  t.pensize(4)
  t.right(10)
  t.goto(x,70)
  t.pendown()
  t.fillcolor('honeydew')
  t.pencolor('honeydew')
  t.circle(50,43)
  
  t.penup()
  t.goto(x+20,70)
  t.pendown()
  t.right(43)
  t.circle(50,43)
  t.penup()

