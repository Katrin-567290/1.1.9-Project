#Katrin turtle
tx=80
def turtle():
  #go to turtle place
  t.penup()
  t.goto(tx,120)
  t.pendown()
  t.setheading(0)
  #make belly
  t.penup()
  t.left(90)
  t.forward(20)
  t.right(90)
  t.pendown()
  t.pencolor("#b8ad59")
  t.fillcolor("#b8ad59")
  t.pensize(5)
  t.right(45)
  t.begin_fill()
  for i in range(10):
    t.forward(2*math.pi)
    t.left(9)
  t.end_fill()
  #make shell
  t.pensize(1)
  t.pencolor("#cec3a0")
  t.fillcolor("#785d46")
  t.begin_fill()
  t.left(90)
  for i in range(10):
    t.forward(2*math.pi)
    t.left(9)
  t.end_fill()
  #make shell shapes
  t.pensize(1)
  t.pencolor("#cec3a0")
  t.fillcolor("#785d46")
  for size in range(6):
    t.setheading(0)
    t.penup()
    t.forward(7)
    t.pendown()
    t.right(size+2)
    if(size%2==0):
      t.begin_fill()
      if(size>=4):
        t.right(5)
        t.circle(size-1,360,6)
      else:
        t.left(5)
        t.circle(size+2,360,6)
      t.end_fill()
    else:
      t.begin_fill()
      if(size>=3):
        t.right(5)
        t.circle(size-1.2,360,5)
      else:
        t.left(5)
        t.circle(size+1.5,360,5)
      t.end_fill()
  #make turtle head
  t.penup()
  t.goto(tx,140)
  t.setheading(180)
  t.pencolor("#b8ad59")
  t.pendown()
  t.pensize(10)
  t.forward(15)
  t.pencolor("#595144")
  t.fillcolor("#595144")
  t.begin_fill()
  t.setheading(-90)
  t.circle(6,180,7)
  t.end_fill()
  t.pencolor("#5e4738")
  t.fillcolor("#5e4738")
  t.begin_fill()
  t.setheading(180)
  t.pensize(5)
  t.right(90)
  t.circle(7,180,8)
  t.end_fill()
  t.pensize(2)
  t.pencolor("green")
  t.circle(2)
  #make turtle fins
  t.penup()
  t.pensize(1)
  t.turtlesize(1)
  t.goto(tx+14,132)
  t.pencolor("#493f37")
  t.fillcolor("#493f37")
  if tx%20==0:
    fin1rot=225
  else:
    fin1rot=275
  t.pendown()
  t.begin_fill()
  rotate=0 #determines trtl rotation value
  move=0 #determines trtl movement value
  for step in range(5):
    if(step<3):
      rotate=10*step
      move=4.5*step
      t.setheading(fin1rot-rotate)
      t.forward(move)
    else:
      rotate=17*step
      move=3*step
      t.setheading(fin1rot+rotate)
      t.forward(move)
  t.end_fill()
  t.penup()
  if tx%20==0:
    t.setheading(94)
  else:
    t.setheading(85)
  t.forward(37)
  #make second fin
  t.goto(tx+5,143)
  t.pendown()
  t.begin_fill()
  for step in range(6):
    rotate=6.5*step
    move=1.9*step
    t.right(rotate)
    t.forward(move)
  t.setheading(245)
  t.end_fill()
  t.penup()
  t.setheading(-33)
  t.forward(32)
  t.setheading(40)
  #make third fin rear
  t.goto(tx+50,139)
  t.setheading(10)
  t.backward(2)
  t.pendown()
  t.begin_fill()
  t.forward(16)
  t.setheading(220)
  t.forward(12)
  t.end_fill()
  #make tail
  t.penup()
  t.setheading(270)
  t.pendown()
  t.pencolor("#cec3a0")
  t.fillcolor("#cec3a0")
  t.setheading(-5)
  t.begin_fill()
  t.forward(7)
  t.setheading(2)
  t.backward(6)
  t.end_fill()
  #make fourth fin rear
  t.pencolor("#493f37")
  t.fillcolor("#493f37")
  t.penup()
  t.backward(5)
  t.setheading(270)
  t.forward(3)
  t.pendown()
  t.begin_fill()
  t.setheading(330)
  t.forward(8)
  t.setheading(260)
  t.forward(12)
  t.setheading(140)
  t.forward(18)
  t.end_fill()
  
background_sand()
mc1pos=200
mc2pos=-100
ojpos=125
pjpos=-110
ojmove=3
pjmove=5
while True:
  t._tracer(0)
  start=time.time()
  while time.time()-start<0.3:
    pass
  t.clear()
  screen.tracer(0)
  brain_coral()
  kelp_rocks()
  fan_coral()
  rect_coral()
  drawcoral()
  t.goto(mc1pos,-160)
  mc1pos-=5
  if mc1pos<-350:
    mc1pos=350
  molecrab()
  t.goto(mc2pos,-160)
  mc2pos-=7
  if mc2pos<-350:
    mc2pos=350
  molecrab()
  
  t.up()
  t.goto(160,ojpos)
  if ojpos==170:
    ojmove=-3
  elif ojpos==-121:
    ojmove=3
  ojpos+=ojmove
  jelly_or()
  t.goto(-230,pjpos)
  if pjpos==170:
    pjmove=-5
  elif pjpos==-140:
    pjmove=5
  pjpos+=pjmove
  jelly_pu()
  
  t.goto(f1pos,110)
  f1pos-=3
  if f1pos<-350:
    f1pos=350
  fish_one(f1pos)
  t.goto(f2pos,160)
  f2pos+=5
  if f2pos>350:
    f2pos=-350
  fish_two(f2pos)
  t.goto(f3pos,30)
  f3pos-=7
  if f3pos<-350:
    f3pos=350
  fish_three(f3pos)
  
  turtle()
  tx-=10
  if tx<-360:
    tx=350
    
  t._tracer(1)
  t._update()

screen.mainloop()
